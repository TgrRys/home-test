{
    "name": "home-test",
    "version": "1.0.0",
    "description": "Express.js backend with PostgreSQL database following clean architecture",
    "main": "src/index.js",
    "scripts": {
        "setup:prod": "NODE_ENV=production node scripts/setupDb.js",
        "setup:dev": "NODE_ENV=development DB_NAME=home_test_db_test node scripts/setupDb.js",
        "start": "npm run setup:prod && NODE_ENV=production node src/index.js",
        "dev": "npm run setup:dev && NODE_ENV=development DB_NAME=home_test_db_test nodemon src/index.js",
        "test": "NODE_ENV=test DB_NAME=home_test_db_test jest",
        "test:watch": "NODE_ENV=test DB_NAME=home_test_db_test jest --watch",
        "test:coverage": "NODE_ENV=test DB_NAME=home_test_db_test jest --coverage",
        "test:sequential": "NODE_ENV=test DB_NAME=home_test_db_test node scripts/run-tests-sequential.js",
        "db:init": "NODE_ENV=development DB_NAME=home_test_db node scripts/initDb.js",
        "postinstall": "npm run setup:prod"
    },
    "dependencies": {
        "bcrypt": "^5.1.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "helmet": "^7.1.0",
        "joi": "^17.11.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "pg": "^8.11.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "supertest": "^6.3.3"
    },
    "license": "MIT",
    "author": "TgrRys",
    "repository": {
        "type": "git",
        "url": "https://github.com/TgrRys/home-test.git"
    },
    "keywords": [
        "nodejs",
        "express",
        "postgresql",
        "api",
        "rest",
        "clean-architecture",
        "jwt",
        "authentication"
    ]
}